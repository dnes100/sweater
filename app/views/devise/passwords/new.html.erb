<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-turbo": false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "Send me reset password instructions", class: "rounded-full bg-sky-500 px-4 py-1 cursor-pointer font-semibold text-lg text-white" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
