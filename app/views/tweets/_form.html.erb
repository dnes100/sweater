<div class="mt-5">
  <%= form_with model: tweet do |form| %>

    <div class="flex flex-row">
      <%= image_tag current_user.avatar_name, class: 'rounded-full w-12 h-12 object-cover' %>

      <div class="flex flex-col w-full max-w-screen-md">
        <!-- Note: focus:ring-0 is needed to remove input field border on focus (added by tailwind by default?)-->
        <%= form.text_area :content, placeholder: "What's happening?", class: 'bg-black border-none text-xl ml-3 focus:ring-0', rows: 3 %>

        <div class="my-2">
          <div class="flex justify-end">
            <%= form.submit "Tweet", class: 'bg-cyan-500 px-3 py-1 rounded-full font-semibold justify-self-end' %>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
